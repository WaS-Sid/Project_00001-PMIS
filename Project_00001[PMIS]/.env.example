# PMIS Production Environment Configuration

# ==================== DATABASE ====================
# PostgreSQL connection settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here_change_in_prod
POSTGRES_DB=pmis
DATABASE_URL=postgresql://postgres:secure_password_here_change_in_prod@postgres:5432/pmis

# ==================== CACHE & QUEUE ====================
# Redis connection settings
REDIS_PASSWORD=secure_redis_password_here_change_in_prod
REDIS_URL=redis://:secure_redis_password_here_change_in_prod@redis:6379/0
CELERY_BROKER=redis://:secure_redis_password_here_change_in_prod@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure_redis_password_here_change_in_prod@redis:6379/1

# ==================== APPLICATION ====================
# Environment and logging
ENVIRONMENT=production
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Web/Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NODE_ENV=production

# ==================== OPENAI / LLM ====================
# Configure one of the following based on your AI model provider

# Azure OpenAI (Microsoft Foundry)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Or OpenAI (if not using Azure)
# OPENAI_API_KEY=your_openai_key

# Or Anthropic Claude
# ANTHROPIC_API_KEY=your_anthropic_key

# ==================== OPTIONAL INTEGRATIONS ====================
# Email ingestion (for worker context)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# S3/Cloud Storage
S3_BUCKET_NAME=pmis-production
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_aws_access_key
S3_SECRET_ACCESS_KEY=your_aws_secret_key

# Sentry (error tracking)
SENTRY_DSN=https://...

# ==================== SECURITY ====================
# CORS configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT/Auth (if implementing)
SECRET_KEY=your_jwt_secret_key_here_generate_with_secrets
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
